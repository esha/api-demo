{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ],
        "types": [
            "node"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "compileOnSave": false
}
